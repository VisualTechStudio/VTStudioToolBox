<Window
    x:Class="VTStudioToolBox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Title="VTStudio ToolBox">

    <Grid x:Name="RootGrid" Background="Transparent">

        <Grid x:Name="EulaOverlay" 
              Background="#CC1F1F1F"
              Visibility="Collapsed"
              Canvas.ZIndex="100">

            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="24"
                        MaxWidth="700">

                <TextBlock Text="VTStudio ToolBox"
                           FontSize="56"
                           FontWeight="SemiBold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>

                <TextBlock FontSize="20"
                           Foreground="#DDDDDD"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center">
                    在使用开始本产品前，请仔细阅读我们的
                    <Hyperlink NavigateUri="https://toolboxeula.vtstudio.space">
                        用户协议
                    </Hyperlink>
                </TextBlock>

                <Button x:Name="BtnAgree"
                        Content="我已阅读并同意，开始使用"
                        Click="BtnAgree_Click"
                        Width="210"
                        Height="40"
                        FontSize="15"
                        FontWeight="Medium"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>

        <Grid Background="#1F1F1F"/>

        <muxc:NavigationView x:Name="NavView"
                             PaneDisplayMode="Left"
                             IsBackButtonVisible="Collapsed"
                             IsSettingsVisible="True"
                             IsPaneToggleButtonVisible="True"
                             PaneTitle="VTStudio ToolBox"
                             OpenPaneLength="200"
                             CompactPaneLength="56"
                             Background="Transparent"
                             Visibility="Collapsed">

            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Content="仪表盘" 
                                         Tag="dashboard"
                                         IsSelected="True">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE70A;"/>
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
            </muxc:NavigationView.MenuItems>

            <Frame x:Name="ContentFrame"
                   Margin="0,32,0,0"/>
        </muxc:NavigationView>
    </Grid>
</Window>